@model IEnumerable<KamuKoprusu.Models.Complaint>
@{
    ViewData["Title"] = "İçerik İnceleme";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-eye me-2"></i>@ViewData["Title"]</h2>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Dashboard
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" asp-action="ReviewContent" asp-route-filter="pending">
                <i class="bi bi-hourglass me-1"></i> Bekleyen
                <span class="badge bg-warning text-dark">@Model.Count(c => c.Status == KamuKoprusu.Enums.ComplaintStatus.PendingModeration)</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "rejected" ? "active" : "")" asp-action="ReviewContent" asp-route-filter="rejected">
                <i class="bi bi-x-circle me-1"></i> Reddedilenler
            </a>
        </li>
    </ul>

    <!-- Content List -->
    <div class="row">
        @foreach (var complaint in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <strong>#@complaint.Id</strong> - @complaint.Type
                        </span>
                        <span class="badge @(complaint.Status == KamuKoprusu.Enums.ComplaintStatus.PendingModeration ? "bg-warning text-dark" : "bg-danger")">
                            @(complaint.Status == KamuKoprusu.Enums.ComplaintStatus.PendingModeration ? "Bekliyor" : "Reddedildi")
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@complaint.Title</h5>
                        <p class="card-text text-muted">
                            @(complaint.Description.Length > 150 ? complaint.Description.Substring(0, 150) + "..." : complaint.Description)
                        </p>
                        
                        <div class="row text-muted small mb-3">
                            <div class="col-6">
                                <i class="bi bi-person me-1"></i>
                                @if (complaint.IsAnonymous)
                                {
                                    <span>Anonim</span>
                                }
                                else
                                {
                                    @complaint.User?.FullName
                                }
                            </div>
                            <div class="col-6">
                                <i class="bi bi-building me-1"></i> @complaint.Institution?.Name
                            </div>
                            <div class="col-6">
                                <i class="bi bi-calendar me-1"></i> @complaint.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </div>
                            <div class="col-6">
                                <i class="bi bi-paperclip me-1"></i> @complaint.MediaFiles.Count dosya
                            </div>
                        </div>

                        @if (complaint.MediaFiles.Any())
                        {
                            <div class="mb-3">
                                <small class="text-muted">Ekli Medya:</small>
                                <div class="d-flex gap-2 mt-1">
                                    @foreach (var media in complaint.MediaFiles.Take(3))
                                    {
                                        @if (media.Type == KamuKoprusu.Enums.MediaType.Photo)
                                        {
                                            <img src="@media.FilePath" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="bi bi-file-earmark-play"></i>
                                            </div>
                                        }
                                    }
                                    @if (complaint.MediaFiles.Count > 3)
                                    {
                                        <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            +@(complaint.MediaFiles.Count - 3)
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a asp-action="ReviewDetail" asp-route-id="@complaint.Id" class="btn btn-outline-primary flex-grow-1">
                                <i class="bi bi-eye me-1"></i> Detay
                            </a>
                            @if (complaint.Status == KamuKoprusu.Enums.ComplaintStatus.PendingModeration)
                            {
                                <form asp-action="ApproveComplaint" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@complaint.Id" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check"></i>
                                    </button>
                                </form>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@complaint.Id">
                                    <i class="bi bi-x"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal-@complaint.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Başvuruyu Reddet</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-action="RejectComplaint" method="post">
                                <div class="modal-body">
                                    <input type="hidden" name="id" value="@complaint.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Red Nedeni</label>
                                        <select name="reason" class="form-select" required>
                                            <option value="Uygunsuz içerik">Uygunsuz içerik</option>
                                            <option value="Spam veya tekrarlanan başvuru">Spam veya tekrarlanan başvuru</option>
                                            <option value="Yanlış veya yanıltıcı bilgi">Yanlış veya yanıltıcı bilgi</option>
                                            <option value="İlgisiz konu">İlgisiz konu</option>
                                            <option value="Hakaret veya küfür içeriyor">Hakaret veya küfür içeriyor</option>
                                            <option value="Diğer">Diğer</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                    <button type="submit" class="btn btn-danger">Reddet</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-check-circle fs-1 text-success"></i>
            <p class="mt-2 fs-5">
                @if (ViewBag.Filter == "pending")
                {
                    <text>Tüm başvurular incelendi!</text>
                }
                else
                {
                    <text>Reddedilen başvuru yok.</text>
                }
            </p>
        </div>
    }
</div>
