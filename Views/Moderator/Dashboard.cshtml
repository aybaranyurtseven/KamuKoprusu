@{
    ViewData["Title"] = "Moderatör Dashboard";
    var stats = ViewBag.Stats;
    var pendingComplaints = ViewBag.PendingComplaints as List<KamuKoprusu.Models.Complaint>;
    var recentWarnings = ViewBag.RecentWarnings as List<KamuKoprusu.Models.Warning>;
}

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-shield-check me-2"></i>@ViewData["Title"]</h2>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body text-center">
                    <i class="bi bi-hourglass-split fs-1"></i>
                    <h2 class="mt-2">@stats.PendingReview</h2>
                    <p class="mb-0">İnceleme Bekliyor</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1"></i>
                    <h2 class="mt-2">@stats.ApprovedToday</h2>
                    <p class="mb-0">Bugün Onaylanan</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-x-circle fs-1"></i>
                    <h2 class="mt-2">@stats.RejectedTotal</h2>
                    <p class="mb-0">Toplam Reddedilen</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle fs-1"></i>
                    <h2 class="mt-2">@stats.WarningsIssued</h2>
                    <p class="mb-0">Verilen Uyarı</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-dark text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-x fs-1"></i>
                    <h2 class="mt-2">@stats.BannedUsers</h2>
                    <p class="mb-0">Yasaklı Kullanıcı</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group">
                <a asp-action="ReviewContent" class="btn btn-primary">
                    <i class="bi bi-eye me-1"></i> İçerik İncele
                </a>
                <a asp-action="WarningManagement" class="btn btn-outline-warning">
                    <i class="bi bi-exclamation-triangle me-1"></i> Uyarı Yönetimi
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Pending Complaints -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-hourglass me-2"></i>İnceleme Bekleyen Başvurular</h5>
                    <a asp-action="ReviewContent" class="btn btn-sm btn-primary">Tümünü Gör</a>
                </div>
                <div class="card-body">
                    @if (pendingComplaints != null && pendingComplaints.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Gönderen</th>
                                        <th>Kurum</th>
                                        <th>Tarih</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var complaint in pendingComplaints)
                                    {
                                        <tr>
                                            <td>@(complaint.Title.Length > 30 ? complaint.Title.Substring(0, 30) + "..." : complaint.Title)</td>
                                            <td>
                                                @if (complaint.IsAnonymous)
                                                {
                                                    <span class="text-muted">Anonim</span>
                                                }
                                                else
                                                {
                                                    @complaint.User?.FullName
                                                }
                                            </td>
                                            <td>@complaint.Institution?.Name</td>
                                            <td>@complaint.CreatedAt.ToString("dd.MM HH:mm")</td>
                                            <td>
                                                <a asp-action="ReviewDetail" asp-route-id="@complaint.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="mt-2">Tüm başvurular incelendi!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Warnings -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Son Uyarılar</h5>
                </div>
                <div class="card-body">
                    @if (recentWarnings != null && recentWarnings.Any())
                    {
                        @foreach (var warning in recentWarnings)
                        {
                            <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                                <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; min-width: 40px;">
                                    <i class="bi bi-exclamation"></i>
                                </div>
                                <div>
                                    <strong>@warning.User?.FullName</strong>
                                    <p class="mb-0 small text-muted">@(warning.Reason.Length > 50 ? warning.Reason.Substring(0, 50) + "..." : warning.Reason)</p>
                                    <small class="text-muted">@warning.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="mt-2">Henüz uyarı yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
