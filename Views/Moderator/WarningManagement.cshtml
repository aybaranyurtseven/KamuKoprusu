@{
    ViewData["Title"] = "Uyarı Yönetimi";
    var usersWithWarnings = ViewBag.UsersWithWarnings as IEnumerable<dynamic>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Dashboard
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Warning System Info -->
    <div class="alert alert-info mb-4">
        <h5><i class="bi bi-info-circle me-2"></i>Uyarı Sistemi</h5>
        <div class="row">
            <div class="col-md-3">
                <span class="badge bg-warning text-dark me-2">1</span> Sadece bildirim
            </div>
            <div class="col-md-3">
                <span class="badge bg-orange text-white me-2" style="background-color: #fd7e14;">2</span> 7 gün askıya alma
            </div>
            <div class="col-md-3">
                <span class="badge bg-danger me-2">3</span> 30 gün askıya alma
            </div>
            <div class="col-md-3">
                <span class="badge bg-dark me-2">4+</span> Kalıcı yasaklama
            </div>
        </div>
    </div>

    <!-- Users with Warnings -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Uyarılı Kullanıcılar</h5>
        </div>
        <div class="card-body">
            @if (usersWithWarnings != null && usersWithWarnings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Uyarı Sayısı</th>
                                <th>İlk Uyarı</th>
                                <th>Son Uyarı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in usersWithWarnings)
                            {
                                var user = item.User as KamuKoprusu.Models.ApplicationUser;
                                int warningCount = (int)item.WarningCount;
                                
                                <tr>
                                    <td>
                                        <strong>@user?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@user?.Email</small>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = warningCount switch
                                            {
                                                1 => "bg-warning text-dark",
                                                2 => "bg-orange",
                                                3 => "bg-danger",
                                                _ => "bg-dark"
                                            };
                                        }
                                        <span class="badge @badgeClass fs-6" style="@(warningCount == 2 ? "background-color: #fd7e14;" : "")">@warningCount</span>
                                    </td>
                                    <td>@((DateTime)item.FirstWarning).ToString("dd.MM.yyyy")</td>
                                    <td>@((DateTime)item.LastWarning).ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (user?.IsBanned == true)
                                        {
                                            <span class="badge bg-danger">Yasaklı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <p class="mt-2 fs-5">Henüz uyarı verilmiş kullanıcı yok.</p>
                </div>
            }
        </div>
    </div>
</div>
