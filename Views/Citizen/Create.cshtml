@model KamuKoprusu.Models.CreateComplaintViewModel
@{
    ViewData["Title"] = "Yeni Şikayet Gönder";
    var institutions = ViewBag.Institutions as List<KamuKoprusu.Models.Institution>;
}

<h2>@ViewData["Title"]</h2>
<p class="text-muted">Yetku/Neden bir sorunla karşılaştınız? Kurumlara ulaşın.</p>
<hr />

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Şikayet Detayları</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Kısa ve açıklayıcı bir başlık" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="6" placeholder="Sorunu detaylı açıklayın..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">En az 20 karakter</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Type" class="form-label"></label>
                            <select asp-for="Type" class="form-select" asp-items="@Html.GetEnumSelectList<KamuKoprusu.Enums.ComplaintType>()">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="Örn: Yol Bakımı" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InstitutionId" class="form-label"></label>
                        <select asp-for="InstitutionId" class="form-select">
                            <option value="">İlgili kurumu seçiniz...</option>
                            @if (institutions != null)
                            {
                                @foreach (var inst in institutions)
                                {
                                    <option value="@inst.Id">@inst.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="InstitutionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" placeholder="İl, İlçe, Mahalle..." />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Medya Dosyaları (Opsiyonel)</label>
                        <input type="file" name="files" class="form-control" multiple accept="image/*,video/*,audio/*" />
                        <small class="form-text text-muted">Fotoğraf, video veya ses dosyası ekleyebilirsiniz (Max: 10MB)</small>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsAnonymous" class="form-check-input" />
                        <label asp-for="IsAnonymous" class="form-check-label"></label>
                        <small class="form-text text-muted d-block">İsminiz gizli kalacaktır</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">💡 İpuçları</h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Açık ve net bir başlık kullanın</li>
                        <li>Sorunu detaylı açıklayın</li>
                        <li>Mümkünse foto/video ekleyin</li>
                        <li>Konum bilgisi verin</li>
                        <li>İlgili kurumu doğru seçin</li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-warning">
                    <h6 class="mb-0">⚠️ Uyarı</h6>
                </div>
                <div class="card-body">
                    <small>
                        Gönderdiğiniz şikayetler moderatör onayından geçecektir.
                        Uygunsuz içerikler reddedilecek ve hesabınıza uyarı verilecektir.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-lg">Şikayeti Gönder</button>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
