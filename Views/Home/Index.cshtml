@{
    ViewData["Title"] = "Ana Sayfa";
    var stats = ViewBag.Stats;
    var recentResolved = ViewBag.RecentResolved as List<KamuKoprusu.Models.Complaint>;
    var categoryStats = ViewBag.CategoryStats as IEnumerable<dynamic>;
}

<!-- Hero Section -->
<div class="bg-secondary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">🏛️ Kamu Köprüsü</h1>
        <p class="lead fs-4">Vatandaşların sesini kurumlara ulaştıran dijital köprü</p>
        <p class="mt-3">Şikayetlerinizi ve önerilerinizi ilgili kurumlara iletebilir, süreçleri takip edebilir ve topluma katkı sağlayabilirsiniz.</p>
        
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-2">
                    <i class="bi bi-person-plus-fill me-1"></i> Kayıt Ol
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                </a>
            </div>
        }
        else
        {
            <div class="mt-4">
                @if (User.IsInRole("Citizen"))
                {
                    <a asp-controller="Citizen" asp-action="Create" class="btn btn-light btn-lg me-2">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Başvuru
                    </a>
                    <a asp-controller="Citizen" asp-action="Profile" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-speedometer2 me-1"></i> Profilim
                    </a>
                }
                else if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-light btn-lg">
                        <i class="bi bi-gear-fill me-1"></i> Admin Paneli
                    </a>
                }
                else if (User.IsInRole("InstitutionRepresentative"))
                {
                    <a asp-controller="Institution" asp-action="Dashboard" class="btn btn-light btn-lg">
                        <i class="bi bi-building me-1"></i> Kurum Paneli
                    </a>
                }
                else if (User.IsInRole("Moderator"))
                {
                    <a asp-controller="Moderator" asp-action="Dashboard" class="btn btn-light btn-lg">
                        <i class="bi bi-shield-check me-1"></i> Moderatör Paneli
                    </a>
                }
            </div>
        }
    </div>
</div>

<div class="container">
    <!-- Stats Section -->
    <div class="row mb-5">
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text fs-1 text-primary"></i>
                    <h2 class="fw-bold mt-2">@stats.TotalComplaints</h2>
                    <p class="text-muted mb-0">Toplam Başvuru</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h2 class="fw-bold mt-2">@stats.ResolvedComplaints</h2>
                    <p class="text-muted mb-0">Çözülen Başvuru</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-info"></i>
                    <h2 class="fw-bold mt-2">@stats.TotalUsers</h2>
                    <p class="text-muted mb-0">Kayıtlı Vatandaş</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-graph-up-arrow fs-1 text-warning"></i>
                    <h2 class="fw-bold mt-2">%@stats.ResolutionRate</h2>
                    <p class="text-muted mb-0">Çözüm Oranı</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Nasıl Çalışır?</h2>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-pencil-fill fs-4"></i>
                    </div>
                    <h5 class="card-title">1. Başvuru Oluştur</h5>
                    <p class="card-text text-muted">Şikayet veya önerinizi detaylı şekilde yazın, fotoğraf ve video ekleyin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-warning text-dark d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-hourglass-split fs-4"></i>
                    </div>
                    <h5 class="card-title">2. İnceleme</h5>
                    <p class="card-text text-muted">Moderatörler başvurunuzu kontrol eder ve ilgili kuruma iletir.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-check-lg fs-4"></i>
                    </div>
                    <h5 class="card-title">3. Çözüm</h5>
                    <p class="card-text text-muted">Kurum başvurunuzu inceler ve çözüm sürecini başlatır.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Resolved -->
        <div class="col-lg-7 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check-circle-fill me-2"></i>Son Çözülen Başvurular</h5>
                </div>
                <div class="card-body">
                    @if (recentResolved != null && recentResolved.Any())
                    {
                        @foreach (var complaint in recentResolved)
                        {
                            <div class="d-flex mb-3 pb-3 border-bottom">
                                <div class="flex-shrink-0">
                                    <div class="bg-success text-white rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <i class="bi bi-check-lg"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">@complaint.Title</h6>
                                    <small class="text-muted">
                                        <i class="bi bi-building me-1"></i> @complaint.Institution?.Name
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar me-1"></i> @complaint.ResolvedAt?.ToString("dd.MM.yyyy")
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <p>Henüz çözülmüş başvuru bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Category Stats -->
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart-fill me-2"></i>Başvuru Kategorileri</h5>
                </div>
                <div class="card-body">
                    @if (categoryStats != null && categoryStats.Any())
                    {
                        @foreach (var cat in categoryStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@cat.Type</span>
                                <span class="badge bg-primary">@cat.Count</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <p>Henüz kategori verisi bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="text-center py-5 bg-light rounded mb-5">
            <h3>Siz de topluma katkı sağlayın!</h3>
            <p class="text-muted">Şimdi ücretsiz kayıt olun ve sesizi duyurun.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                <i class="bi bi-person-plus-fill me-1"></i> Hemen Kayıt Ol
            </a>
        </div>
    }
</div>
